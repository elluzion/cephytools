<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/action_card_background"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/main_content_wrapper_padding"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="@dimen/main_content_wrapper_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/poppins"
            android:textFontWeight="500"
            android:text="@string/status_card_app_version"
            android:textSize="@dimen/text_12sp"
            android:layout_width="wrap_content"
            android:textColor="@color/primaryText"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/summary_app_version"
            android:fontFamily="@font/poppins"
            android:textFontWeight="700"
            android:text="@android:string/untitled"
            android:textSize="@dimen/text_12sp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="13dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:fontFamily="@font/poppins"
        android:textFontWeight="500"
        android:text="@string/status_card_android_version"
        android:textSize="@dimen/text_12sp"
        android:layout_width="wrap_content"
        android:textColor="@color/primaryText"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/summary_android_version"
        android:fontFamily="@font/poppins"
        android:textFontWeight="700"
        android:text="@android:string/untitled"
        android:textSize="@dimen/text_12sp"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>