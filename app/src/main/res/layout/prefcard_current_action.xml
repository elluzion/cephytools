<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/prefcard_current_action_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/action_card_background"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/main_content_wrapper_padding"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/poppins"
            android:textFontWeight="700"
            android:text="@string/current_action_card"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:textColor="@color/primaryText"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0px"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/current_action_label"
            android:fontFamily="@font/poppins"
            android:textFontWeight="700"
            android:text="@android:string/untitled"
            android:textSize="@dimen/text_14sp"
            android:layout_width="wrap_content"
            android:layout_margin="4dp"
            android:textColor="@color/red_disabled"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>